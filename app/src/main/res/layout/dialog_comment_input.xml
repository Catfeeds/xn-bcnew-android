<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/layout_left_interval"
                android:layout_marginTop="10dp"
                android:text="@string/cancel"
                android:textColor="@color/text_black_cd"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:layout_marginTop="10dp"
                android:text="@string/realse"
                android:textColor="@color/text_black_cd"
                android:textSize="14sp" />


        </FrameLayout>

        <View style="@style/style_split_line" />

        <EditText
            android:textColorHint="@color/app_text_gray"
            android:textColor="@color/text_black_cd"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:gravity="top"
            android:text="回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复回复"
            android:padding="10dp" />


    </LinearLayout>
</layout>
