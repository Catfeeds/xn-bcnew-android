<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_title_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_radiobtn_select_left"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/fast_msg"
                android:textColor="@drawable/common_radiobtn_select_text_color"
                android:textSize="@dimen/title_radiobutton_txt" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <RadioButton
                android:id="@+id/radio_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_radiobtn_select_right"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/msg"
                android:textColor="@drawable/common_radiobtn_select_text_color"
                android:textSize="@dimen/title_radiobutton_txt" />

        </RadioGroup>

    </LinearLayout>

</layout>